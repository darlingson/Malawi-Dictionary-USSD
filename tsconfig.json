{
  "compilerOptions": {
    "target": "es6",                        // Set the JavaScript version for output files
    "module": "commonjs",                   // Use CommonJS module system
    "outDir": "./dist",                     // Output compiled files to 'dist' folder
    "rootDir": "./",                        // The project's root directory is the root
    "strict": true,                         // Enable all strict type-checking options
    "esModuleInterop": true,                // Enable module interop support
    "skipLibCheck": true,                   // Skip type checking of all declaration files
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express", "express-session", "./types/smpp.d.ts"],
  },
  "include": ["**/*.ts"],                   // Include all TypeScript files in the project
  "exclude": ["node_modules", "dist"]       // Exclude node_modules and dist directories
}
